%section
  .header
    = link_to new_user_path, class: 'btn btn-primary' do
      = t('views.users.actions.new.title')

%section
  %table.table
    %thead
      %tr
        %th= t('activerecord.attributes.users.account_no')
        %th= t('activerecord.attributes.users.name')
        %th= t('activerecord.attributes.users.area')
        %th= t('views.label.actions')
    %tbody
      - unless @users.empty?
        - @users.each do | user |
          %tr
            %td= user.account_no
            %td= user.name
            %td= user.area
            %td
              = link_to user_path(user), class: 'btn' do
                = t('views.input.show')
              = link_to edit_user_path(user), class: 'btn' do
                = t('views.input.edit')
              = link_to delete_user_path(user), method: :delete, confirm: t('views.confirmation.delete'), class: 'btn btn-danger' do
                = t('views.input.delete')
      - else
        %tr
          %td{colspan: 4}
            = t('views.users.messages.no_results')

  = paginate @users
